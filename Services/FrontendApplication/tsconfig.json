{
  "compilerOptions": {
    "baseUrl": "./",
    /* Specify the base directory to resolve non-relative module names. */
    "paths": {
      // Sync with aliases in webpack configuration
      "Components/*": [
        "./Components/*"
      ],
      "Pages/*": [
        "./Pages/*"
      ],
      "Illustrations/*": [
        "./Illustrations/*"
      ],
      "Utils/*": [
        "./Utils/*"
      ],
    },
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  }
}